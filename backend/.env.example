# AHAII Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative Database Configuration (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/ahaii

# API Keys for External Services
SERPAPI_KEY=your-serpapi-key-here
GOOGLE_API_KEY=your-google-api-key-here
SERPER_API_KEY=your-serper-api-key-here

# OpenAI/LLM Configuration (if using for scoring/analysis)
OPENAI_API_KEY=your-openai-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ahaii_backend.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# RSS and News Monitoring
RSS_UPDATE_INTERVAL=3600  # seconds
NEWS_BATCH_SIZE=50

# Academic Processing
ACADEMIC_UPDATE_INTERVAL=86400  # seconds (24 hours)
PUBMED_BATCH_SIZE=100
ARXIV_BATCH_SIZE=50

# Vector Search Configuration
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7

# Health AI Keywords Update Frequency
KEYWORDS_REFRESH_HOURS=24

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute
